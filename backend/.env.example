ENV=local
DEBUG=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./dev.db

# Auth
JWT_SECRET_KEY=replace-with-random-secret
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Storage (S3-compatible cloud bucket)
S3_BUCKET_UPLOADS=transcribe-uploads
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
# Optional custom endpoint if not using AWS (e.g., Yandex Object Storage)
S3_ENDPOINT_URL=
S3_REGION=us-east-1

# Transcription
ASSEMBLYAI_API_KEY=your_api_key
ASSEMBLYAI_TLS_RETRIES=3
ASSEMBLYAI_PRESIGNED_TTL=3600

MAX_PARALLEL_TRANSCRIPTIONS=2
