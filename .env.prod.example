ENV=prod
DEBUG=false

# PostgreSQL (container name "db" resolves inside docker network)
DATABASE_URL=postgresql+psycopg://transcribe:YOUR_POSTGRES_PASSWORD@db:5432/transcribe

# Auth - generate with: openssl rand -hex 32
JWT_SECRET_KEY=YOUR_JWT_SECRET_HERE
ACCESS_TOKEN_EXPIRE_MINUTES=60

# S3 Storage
STORAGE_BACKEND=s3
S3_BUCKET_UPLOADS=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_ENDPOINT_URL=https://storage.yandexcloud.net
S3_REGION=ru-central1

# Transcription
TRANSCRIPTION_BACKEND=assemblyai
ASSEMBLYAI_API_KEY=your-assemblyai-key
MAX_PARALLEL_TRANSCRIPTIONS=3
